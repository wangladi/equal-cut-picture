/**index.wxss**/
.container {
  position: relative;
  /* width: 100vw; */
  height: 100vh;
  background:#000;
  display: flex;
  flex-direction: column;
  justify-content: scenter;
  align-items: center;
}
.cur-img {
  position: absolute;
}
.scroll-image {
  height: 50%;
  position: absolute;
  top: 25%;
  left: 0;
  /* z-index:100;
  overflow: auto; */
}
.image-w {
  height: 100%;
}
.image-h {
  width: 80%;
}
.img-box {
  width: 80%;
  height: 50%;
  z-index: 10;
  pointer-events: none;
}
.upload-icon {
  width: 100rpx;
  height: 100rpx;
}
.btns {
  position: fixed;
  bottom: 0;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  z-index:10;
}
.btn {
  border-top: 2rpx solid #555;
  background: transparent;
  color:#FFF;
  border-radius: 0;
  line-height: 100rpx;
}
.btn:first-child{
  border-right:2rpx solid #555;
}
/* 蒙层 */
.cover {
  position: absolute;
  opacity: 0.4;
  background: #555;
}
.cover-top {
  width: 100%;
  height: 25%;
  top:0;
}
.cover-bottom {
  width: 100%;
  height: 25%;
  bottom:0;
}
.cover-left {
  width: 10%;
  height: 50%;
  left:0;
}
.cover-right {
  width: 10%;
  height: 50%;
  right:0;
}